<!--pages/login/login.wxml-->
<view class="container">
  <view class="title_container">
    <text class="title">电梯管理</text>
  </view>
  <view class="form-container">
    <form bindsubmit="formSubmit">
      <view class="section">
        <image class="nameImage" src="/images/tab/code.png"></image>
        <input name="input" bindinput='bindNameInput' placeholder="请输入工号" />
      </view>
      <view class="section section2">
        <image class="nameImage" src="/images/tab/user.png"></image>
        <input name="input" type='text' bindinput='bindKeyInput' placeholder="请输入真实姓名" focus/>
      </view>
      <view class="btn-area">
        <button  formType="submit">绑定</button>
      </view>
    </form>
   
  </view>
  
</view>